<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myself.mykotlin.demo.CreateQRActivity">

    <EditText
        android:id="@+id/et_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edittext"
        android:hint="请输入相关信息"
        android:padding="10dp"
        android:textColorHint="#D1D1D1"/>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/et_0"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/text_color_B57DE4"
        android:text="确认信息"
        android:textAllCaps="false"
        android:textColor="@color/text_color_white"/>

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_confirm"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_edittext_normal"
        android:ellipsize="end"
        android:hint="输入信息显示"
        android:lineSpacingMultiplier="1.1"
        android:lines="8"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColorHint="#D1D1D1"
        android:textSize="14sp"/>

    <FrameLayout
        android:id="@+id/fl_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#EBEBEB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="二维码"/>

        <ImageView
            android:id="@+id/iv_0"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

    </FrameLayout>


    <Button
        android:id="@+id/btn_create_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@color/text_color_B57DE4"
        android:text="生成二维码"
        android:textAllCaps="false"
        android:textColor="@color/text_color_white"/>

</RelativeLayout>
